<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--1 Overview-->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/overview_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overview" />

        <!--2 Transactions-->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/transaction_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transactions" />
        <!--3 Ins-->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/incomes_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ins" />
        <!--4 Expenses-->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/expenses_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/outs" />
    </com.google.android.material.tabs.TabLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:id="@+id/totalBalanceTextView"
        android:layout_height="wrap_content"
        android:text="@string/total_balance"
        android:layout_marginTop="32dp"
        style="@style/TextAppearance.CustomHeadline6"
        android:textColor="#605C5C"
        app:layout_constraintTop_toBottomOf="@+id/tab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--this is the balance-->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:id="@+id/balanceTextView"
        android:layout_height="wrap_content"
        android:hint="@string/test_value"
        android:layout_marginTop="12dp"
        style="@style/TextAppearance.CustomHeadline5"
        app:layout_constraintTop_toBottomOf="@+id/totalBalanceTextView"
        app:layout_constraintStart_toStartOf="@id/totalBalanceTextView"
        app:layout_constraintEnd_toEndOf="@id/totalBalanceTextView"/>



    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="60dp"
        android:text="@string/create"
        app:icon="@drawable/ic_fab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>