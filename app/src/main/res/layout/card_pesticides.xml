<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transaction_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    android:elevation="10dp"
    android:rotationX="5"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/type_of_transaction_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pesticide_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pesticide Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/active_material_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Active Ingredients"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/pesticide_name_text_view"
            app:layout_constraintEnd_toEndOf="@+id/pesticide_name_text_view"
            app:layout_constraintStart_toStartOf="@id/pesticide_name_text_view"

            app:suffixText="â‚¬" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/type_of_preparate_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="preparate Type"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/active_material_text_view"
            app:layout_constraintEnd_toEndOf="@id/active_material_text_view"
            app:layout_constraintStart_toStartOf="@id/active_material_text_view"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>




