<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_card_holder"
        tools:context=".uiController.authenticationFirebase.SignUpFragment">



        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.core.widget.ContentLoadingProgressBar>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/userInfoTextView"
            style="@style/TextAppearance.CustomSubTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/hello_user_welcome_to_my_app_press_the_button_below_to_signup_with_google_hint"
            android:textAlignment="center"
            android:layout_marginTop="155dp"
            android:textColor="@color/primaryTextColor"
            android:textColorHint="@color/primaryTextColor"
            app:layout_constraintBottom_toTopOf="@+id/signUpButton"
            app:layout_constraintEnd_toEndOf="@id/signUpButton"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/signUpButton"
            app:layout_constraintVertical_chainStyle="spread" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signUpButton"
            style="@style/ShapeAppearance.MyApp.SmallComponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:icon="@android:drawable/stat_notify_sync"
            app:iconSize="20dp"
            android:backgroundTint="@color/primaryTextColor"
            android:textColor="@color/secondaryTextColor"
            android:text="Sign Up with google"
            app:layout_constraintTop_toBottomOf="@id/userInfoTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/primaryTextColor"
            android:drawableStart="@android:drawable/stat_notify_sync"
            android:text="SignOut"
            android:textColor="@color/design_default_color_on_secondary"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/signUpButton"
            app:layout_constraintStart_toStartOf="@id/signUpButton"
            app:layout_constraintEnd_toEndOf="@id/signUpButton"
            tools:layout_editor_absoluteX="318dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>