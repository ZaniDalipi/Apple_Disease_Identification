<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signUpFragment">


    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.zanoapp.applediseaseIdentification.uiController.authenticationFirebase.SignUpFragment"
        android:label="sign_up_fragment"
        tools:layout="@layout/sign_up_fragment" >
        <action
            android:id="@+id/action_signUpFragment_to_userProfileDataFragment"
            app:destination="@id/userProfileDataFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@+id/userProfileDataFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signUpFragment_to_cameraFragment"
            app:destination="@id/cameraFragment"
            app:popUpTo="@+id/signUpFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.zanoapp.applediseaseIdentification.uiController.camera.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/camera_fragment" >

    </fragment>
    <fragment
        android:id="@+id/userProfileDataFragment"
        android:name="com.zanoapp.applediseaseIdentification.uiController.userProfileData.UserProfileDataFragment"
        android:label="userProfileDataFragment">
        <action
            android:id="@+id/action_userProfileDataFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:launchSingleTop="false"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="false" />

    </fragment>


</navigation>